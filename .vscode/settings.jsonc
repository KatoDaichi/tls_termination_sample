{
  "editor.defaultFormatter": "biomejs.biome",
  // ファイル保存時のアクション設定
  "editor.codeActionsOnSave": {
    // ファイル保存時にフォーマットを適用する
    "source.fixAll": "explicit"
  },
  // ワークスペースで使用するTypeScriptのバージョンを指定
  "typescript.tsdk": "node_modules/typescript/lib",
  // typescriptファイルの設定
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true
  }
}
